<Window x:Class="roboProg.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:roboProg"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="222" Width="499">
    <Grid Background="#FFF0F0F0" Margin="0,0,1,2">
        <TabControl x:Name="SettingsRobotTabControl" Background="#FFA0A0A0" HorizontalAlignment="Left" Width="479" Margin="1,0,0,0">
            <TabItem Header="+" MouseLeftButtonUp="TabItem_MouseLeftButtonUp">
            </TabItem>
        </TabControl>
        <Button x:Name="Save" Content="Save" HorizontalAlignment="Left" Margin="365,45,0,0" VerticalAlignment="Top" Width="90" RenderTransformOrigin="0,0.5" Height="25" Click="Save_Click"/>
        <Button x:Name="Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="365,140,0,0" VerticalAlignment="Top" Width="90" RenderTransformOrigin="0,0.5" Height="25" Click="Cancel_Click"/>
        <Button x:Name="SaveAndClose" Content="OK" HorizontalAlignment="Left" Margin="365,100,0,0" VerticalAlignment="Top" Width="90" RenderTransformOrigin="0,0.5" Height="25" Click="SaveAndClose_Click"/>
    </Grid>
</Window>
